<UserControl x:Class="Messenger.Desktop.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Messenger.Desktop.Views"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="150">
    <Grid Background="Gray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Orientation="Vertical" Margin="166,165,150,164"
                    Width="209">
            
            <TextBox x:Name="Username" HorizontalAlignment="Center" 
                     Height="23" TextWrapping="Wrap" 
                     VerticalAlignment="Center"  Width="160">
            </TextBox>

            <Button Name ="LoginButton" Content="Login" Width="100" Background="Green"
                    Foreground="White" HorizontalAlignment="Right" Margin="0,10,25,0"
                    Click="LoginButton_Click">
             </Button>
        </StackPanel>
    </Grid>
</UserControl>
